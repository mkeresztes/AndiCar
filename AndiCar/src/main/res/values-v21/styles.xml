<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!--for colors see https://material.google.com/style/color.html#color-color-palette-->
        <!--pink 500-->
        <item name="colorPrimary">@color/primary</item>
        <!--pink 700-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--pink A700-->
        <item name="colorAccent">@color/primary_accent</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <!--<item name="android:navigationBarColor">@color/primary</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--SwitchDateTime Styles-->
    <!-- Header Background -->
    <style name="Theme.SwitchDateTime.HeaderBackground">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <!-- Date -->
    <style name="Theme.SwitchDateTime.Date">
        <item name="mcv_selectionColor">@color/primary</item>
    </style>
    <!--End SwitchDateTime Styles-->
</resources>
