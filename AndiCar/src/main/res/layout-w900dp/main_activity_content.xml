<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.andicar2.activity.MainActivity"
              tools:showIn="@layout/main_activity_app_bar">

    <TextView
        android:id="@+id/tvDebugInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="w900dp; "
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llToDoZone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvToDoText1"
                    style="@style/ListItem.FirstLine"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tvToDoText2"
                    style="@style/ListItem.SecondLine"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/llStatisticsZone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatisticsHdr"
                    style="@style/ListItem.FirstLine"
                    android:gravity="center_horizontal"
                    android:text="@string/main_activity_statistics_header_caption"
                    android:textSize="14sp"
                    android:paddingBottom="3dp"
                    android:layout_marginTop="8dp" />
                <!--android:background="@color/main_activity_headers_background"-->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatisticsLastKnownOdometer"
                        style="@style/ListItem.SecondLine"
                        android:text="@string/main_activity_statistics_last_odometer_label"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvStatisticsAvgFuelEff"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvStatisticsLastFuelEff"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp"
                        tools:ignore="InconsistentLayout" />

                    <TextView
                        android:id="@+id/tvStatisticsTotalExpenses"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvStatisticsMileageExpense"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp"
                        tools:ignore="InconsistentLayout" />
                </LinearLayout>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvChartsHdr"
                style="@style/ListItem.FirstLine"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <!--android:background="@color/main_activity_headers_background"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chart11Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart11Title"/>

                <TextView
                    android:id="@+id/chart12Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart12Title"/>

                <TextView
                    android:id="@+id/chart13Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart13Title"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line1Charts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_gravity="top"
                android:tag="@string/chart_key_legendAtRight">

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    tools:ignore="InconsistentLayout"/>
            </LinearLayout>

            <TextView
                android:id="@+id/line1ChartFooterText"
                style="@style/AndiCarChartFooter"/>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chart21Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart21Title"/>

                <TextView
                    android:id="@+id/chart22Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart22Title"/>

                <TextView
                    android:id="@+id/chart23Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart23Title"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2Charts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:tag="@string/chart_key_legendAtRight">

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart21"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart22"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart23"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    tools:ignore="InconsistentLayout"/>
            </LinearLayout>

            <TextView
                android:id="@+id/line2ChartFooterText"
                style="@style/AndiCarChartFooter"/>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chart31Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart31Title"/>

                <TextView
                    android:id="@+id/chart32Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart32Title"/>

                <TextView
                    android:id="@+id/chart33Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart33Title"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3Charts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:tag="@string/chart_key_legendAtRight">

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart31"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart32"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart33"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    tools:ignore="InconsistentLayout"/>
            </LinearLayout>

            <TextView
                android:id="@+id/line3ChartFooterText"
                style="@style/AndiCarChartFooter"/>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chart41Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart41Title"/>

                <TextView
                    android:id="@+id/chart42Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart42Title"/>

                <TextView
                    android:id="@+id/chart43Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/AndiCarChartHeader"
                    android:text="@string/chart43Title"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4Charts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:tag="@string/chart_key_legendAtRight">

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart41"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart42"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"/>

                <andicar.n.view.AndiCarPieChart
                    android:id="@+id/chart43"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    tools:ignore="InconsistentLayout"/>
            </LinearLayout>

            <TextView
                android:id="@+id/line4ChartFooterText"
                style="@style/AndiCarChartFooter"/>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvShortAboutLbl"
                style="@style/ListItem.SecondLine"
                android:gravity="center_horizontal|bottom"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvShortAboutAppVersion"
                style="@style/ListItem.SecondLine"
                android:gravity="center_horizontal|bottom"
                android:textSize="14sp"/>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvMotto"
                style="@style/ListItem.SecondLine"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:text="Manage your cars with the power of open source."
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
