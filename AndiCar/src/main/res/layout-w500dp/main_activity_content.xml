<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="org.andicar2.activity.MainActivity"
              tools:showIn="@layout/main_activity_app_bar">

    <TextView
        android:id="@+id/tvDebugInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="w500dp; "
        tools:ignore="HardcodedText"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llToDoZone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvToDoText1"
                    style="@style/ListItem.FirstLine"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tvToDoText2"
                    style="@style/ListItem.SecondLine"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/llStatisticsZone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatisticsHdr"
                    style="@style/ListItem.FirstLine"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="3dp"
                    android:text="@string/main_activity_statistics_header_caption"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatisticsLastKnownOdometer"
                        style="@style/ListItem.SecondLine"
                        android:text="@string/main_activity_statistics_last_odometer_label"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvStatisticsAvgFuelEff"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvStatisticsLastFuelEff"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp"
                        tools:ignore="InconsistentLayout"/>

                    <TextView
                        android:id="@+id/tvStatisticsTotalExpenses"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvStatisticsMileageExpense"
                        style="@style/ListItem.SecondLine"
                        android:textSize="14sp"
                        tools:ignore="InconsistentLayout"/>
                </LinearLayout>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line1Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line1LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line1Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line2LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line2Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line3LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line3Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line4LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line4Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line5Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line5LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line5Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line6Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line6LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line6Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line7Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line7LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line7Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line8Zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <andicar.n.components.ShowRecordComponent
                    android:id="@+id/line8LastRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowRecordComponent>

                <andicar.n.components.ShowChartsComponent
                    android:id="@+id/line8Charts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </andicar.n.components.ShowChartsComponent>

                <TextView
                    style="@style/AndiCarSeparatorView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvShortAboutLbl"
                style="@style/ListItem.SecondLine"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal|bottom"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvShortAboutAppVersion"
                style="@style/ListItem.SecondLine"
                android:gravity="center_horizontal|bottom"
                android:textSize="14sp"/>

            <TextView
                style="@style/AndiCarSeparatorView"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvMotto"
                style="@style/ListItem.SecondLine"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:text="Manage your cars with the power of open source."
                android:textColor="@color/primary_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
