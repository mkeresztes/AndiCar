<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--android:top="-3dp" android:right="-3dp" android:bottom="-3dp" to keep visible only the left border-->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/list_item_separator_line"/>
        </shape>
    </item>
</layer-list>