<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_background_selector"
              android:orientation="vertical"
              android:paddingBottom="@dimen/list_view_margin_vertical"
              android:paddingTop="@dimen/list_view_margin_vertical"
              android:paddingLeft="@dimen/list_view_margin_horizontal"
              android:paddingRight="@dimen/list_view_margin_horizontal"
    >

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="@style/ListItem.FirstLine"/>

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="@style/ListItem.SecondLine"
        tools:ignore="InconsistentLayout"/>

    <TextView
        android:id="@+id/thirdLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="@style/ListItem.ThirdLine"/>
</LinearLayout>